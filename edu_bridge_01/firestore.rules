rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection with user type separation
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
        (resource.data.userType == 'Admin' || 
         resource.data.userType == 'Teacher' ||
         (resource.data.userType == 'Parent' && request.auth.uid in resource.data.children) ||
         resource.data.userType == 'Student');
      
      // Admin can read all users
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Admin';
      
      // Teachers can read students and parents
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Teacher' &&
        (resource.data.userType == 'Student' || resource.data.userType == 'Parent');
    }
    
    // Students subcollection for better organization
    match /students/{studentId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == studentId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType in ['Admin', 'Teacher']);
    }
    
    // Teachers subcollection
    match /teachers/{teacherId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Admin';
    }
    
    // Parents subcollection
    match /parents/{parentId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == parentId || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType in ['Admin', 'Teacher']);
    }
    
    // Admins subcollection
    match /admins/{adminId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'Admin';
    }
  }
}